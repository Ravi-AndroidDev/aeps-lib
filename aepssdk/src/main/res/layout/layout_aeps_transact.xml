<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_aeps_transact_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aeps_image_view_withdraw"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/withdraw_green"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/txt_aeps_transact_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Withdraw"
                    android:textColor="@color/blue_text_color"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_aeps_transact_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:src="@drawable/deposit_green" />

                <TextView
                    android:id="@+id/txt_aeps_transact_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Deposit"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_aeps_transact_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aeps_image_view_balance"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/img_balance_gray"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/txt_aeps_transact_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Balance"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_aeps_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aeps_image_view_report"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/img_balance_gray"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/txt_aeps_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Report"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:id="@+id/tvWithdraw"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rounded_inner_indicator_color"
                android:padding="@dimen/_5sdp"
                android:text="Withdraw"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginRight="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rounded_inner_light_indecatore"
                android:padding="@dimen/_5sdp"
                android:text="Balance"
                android:textColor="@color/white"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/tvReport"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/rounded_inner_light_indecatore"
                android:padding="@dimen/_5sdp"
                android:text="Report"
                android:textColor="@color/white"
                android:textSize="18dp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_withdraw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_withdraw" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>